<Window x:Class="MoodleLogAnalyse.ChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChartWindow" Height="300" Width="300">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Visible" Margin="0,42,-0.4,0.4">
            <Canvas x:Name="ChartCanvas" Height="800" Width="800" Background="Beige"/>
        </ScrollViewer>
        <Button Content="Button" HorizontalAlignment="Left" Margin="48,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
